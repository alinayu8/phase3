<br><h3 class="center-title">Recent Purchases</h3>
<hr>

<%if Item.all.to_a.empty? %>
<h4 class="center-title">No recent purchases</h4>
<% else %>

    <table class="center-datagrid">
        <thead class="header-datagrid">
            <th>Item</th>
            <th>Quantity</th>
            <th>Date</th>
        </thead>

    <% for purchase in @purchases %>
        <% if Item.exists?(purchase.item_id) %>
            <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">  
            <td><%= link_to Item.find(purchase.item_id).name, item_path(Item.find(purchase.item_id)) %></td>
            <td><%= purchase.quantity %></td>
            <td><%= purchase.date.strftime("%m/%d/%y") %></td>
            </tr>
        <%end%>
    <% end %>
    </table>

<% end %>
