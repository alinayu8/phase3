        <td><%= supply.inventory_level %></td>
        </tr>
    <% end %>
    </table>

    <h1>Inactive Items</h1><br>
    <table class="items">
        <thead class="item-datagrid">
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>&nbsp;</th>
        </thead>
    <% for item in @inactive_items %>
