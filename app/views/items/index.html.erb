                        <td><%= clock.inventory_level %></td>
                        <td><%= link_to "Edit", edit_item_path(clock) %></td>
                        </tr>
                    <% end %>
                </table>
            <% end %>

            <!-- SUPPLIES -->

            <h5>Supplies</h5><br>
            <%if @supplies.empty? %>
                <h4 class="center-title">No supplies available</h4>
            <% else %>
                <table class="datagrid">
                    <thead class="header-datagrid">
                        <th>Name</th>
                        <th>Price</th>
                        <th>Inventory</th>
                        <th> </th>
                    </thead>
                    <% for supply in @supplies %>
                        <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
                        <td><%= link_to supply.name, item_path(supply) %></td>
