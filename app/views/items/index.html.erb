        <td><%= link_to piece.name, item_path(piece) %></td>
        <td><%= number_to_currency(piece.current_price) %></td>
        <td><%= piece.inventory_level %></td>
        </tr>
    <% end %>
    </table>

    <h2>Clocks</h2><br>
    <table class="clock">
        <thead class="clock-datagrid">
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>&nbsp;</th>
        </thead>
    <% for clock in @clocks %>
        <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
        <td><%= link_to clock.name, item_path(clock) %></td>
        <td><%= number_to_currency(clock.current_price) %></td>
        <td><%= clock.inventory_level %></td>
        </tr>
    <% end %>
    </table>

    <h2>Supplies</h2><br>
    <table class="supplies">
        <thead class="supplies-datagrid">
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
