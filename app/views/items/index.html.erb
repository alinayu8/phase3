<%= link_to "Items", items_path %>
<%= link_to "Purchases", purchases_path %>
<%= link_to "Prices", item_prices_path %>

<% if Item.count == 0 %>
    <h1>There are no items in the system at this time</h1>
<% else %>
    <h1>Available Items</h1><br>
    <h2>Boards</h2><br>
    <table class="board">
        <thead class="board-datagrid">
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>&nbsp;</th>
        </thead>
    <% for board in @boards %>
        <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
        <td><%= link_to board.name, item_path(board) %></td>
        <td><%= number_to_currency(board.current_price) %></td>
        <td><%= board.inventory_level %></td>
        </tr>
    <% end %>
    </table>

    <h2>Pieces</h2><br>
    <table class="piece">
        <thead class="piece-datagrid">
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>&nbsp;</th>
        </thead>
    <% for piece in @pieces %>
