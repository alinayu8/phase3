        <td><%= number_to_currency(clock.current_price) %></td>
        <td><%= clock.inventory_level %></td>
        </tr>
    <% end %>
    </table>

    <h4>Supplies</h4><br>
    <table class="center-datagrid">
        <thead class="header-datagrid">
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
