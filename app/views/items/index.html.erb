<% if Item.count == 0 %>
    <br><h4 class="center-title">There are no items in the system at this time</h4>
<% else %>
    <div class="row">
        <div class="large-6 columns">
            <br><h3 class="center-title">Available Items</h3>
            <hr>

            <!-- BOARDS -->

            <h5>Boards</h5><br>
            <%if @boards.empty? %>
                <h4 class="center-title">No boards available</h4>
            <% else %>
                <table class="datagrid">
                    <thead class="header-datagrid">
                        <th>Name</th>
                        <th>Price</th>
                        <th>Inventory</th>
                        <th> </th>
                    </thead>
                    <% for board in @boards %>
                        <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
                        <td><%= link_to board.name, item_path(board) %></td>
                        <td><%= number_to_currency(board.current_price) %></td>
                        <td><%= board.inventory_level %></td>
                        <td><%= link_to "Edit", edit_item_path(board) %></td>
                        </tr>
                    <% end %>
                </table>
            <%end%>

            <!-- PIECES -->

            <h5>Pieces</h5><br>
            <%if @pieces.empty? %>
                <h4 class="center-title">No pieces available</h4>
            <% else %>
