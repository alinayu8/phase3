                        <td><%= supply.inventory_level %></td>
                        <td><%= link_to "Edit", edit_item_path(supply) %></td>
                        </tr>
                    <% end %>
                </table>
            <% end %>

        </div>

        <!-- INACTIVE ITEMS -->

        <div class="large-6 columns"><br>
            <h3 class="center-title">Inactive Items</h3>
            <hr>
            <%if @inactive_items.empty? %>
                <h4 class="center-title">No inactive items</h4>
            <% else %>
