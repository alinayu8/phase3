<b>Price History:&nbsp;</b>
  <table class="datagrid">
        <thead class="header-datagrid">
            <th>Price</th>
            <th>Start Date</th>
            <th>End Date</th>
        </thead>
    <% for price in @price_history %>
        <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
        <td><%= number_to_currency(price.price) %></td>
        <td><%= price.start_date %></td>
        <td><%= price.end_date %></td>
        </tr>
    <% end %>
</table>